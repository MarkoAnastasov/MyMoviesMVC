@model MyMoviesMVC.ModelsDTO.UserMovie.UserMovieDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

    <div class="movie-span">
        <div class="movie-card">
            <div class="movie-image">
                <img src="data:image/*;base64,@Model.Cover" alt="@Model.Title" />
            </div>
            <div class="overlay">
                <div class="text">
                    <h2>@Model.Title</h2>
                    <p class="movie-description">@Model.Description</p>
                    <a asp-controller="Movie" asp-action="Details" asp-route-id="@Model.Id" class="movie-link">See more</a>
                </div>
            </div>
        </div>
    </div>