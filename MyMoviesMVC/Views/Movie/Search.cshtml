@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<MyMoviesMVC.ModelsDTO.Movie.MovieMainDTO>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Search";
}

@section Style{
    <link href="~/css/Movies/Search/search.css" rel="stylesheet" type="text/css" />
}


<div id="search-top">
    <img src="~/images/search.png" alt="search" />
    <h3>Search results for: "@ViewData["SearchTitle"].ToString()"</h3>
</div>
<div id="movies-container">
   @if (Model.Count == 0)
    {
        <div id="no-movies-found">
            <h3>Nothing found :( Search again.</h3>
        </div>
    }
    else
    {
        @foreach(var movie in Model)
         {
            <partial name="_DisplayMoviePartial" model="movie" />
         }
    }
</div>


@section Scripts{
    <script src="~/js/Movies/Search/search.js"></script>
}