@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<MyMoviesMVC.ModelsDTO.Movie.MovieMainDTO>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Search";
}

@section Style{
    <link href="~/css/Movies/Search/search.css" rel="stylesheet" type="text/css" />
}


<div id="search-top">
    <img src="~/images/search.png" alt="search" />
    <h3>Search results for: "@ViewData["SearchTitle"].ToString()"</h3>
</div>
<div id="movies-container">
   @if (Model.Count == 0)
    {
        <div id="no-movies-found">
            <h3>Nothing found :( Search again.</h3>
        </div>
    }
    else
    {
       @foreach(var movie in Model)
        {
        <div class="movie-span">
            <div class="movie-card">
                <div class="movie-image">
                    <img src="data:image/*;base64,@movie.Cover" alt="@movie.Title" />
                </div>
                <div class="overlay">
                    <div class="text">
                        <h2>@movie.Title</h2>
                        <p class="movie-description">@movie.Description</p>
                        <a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id" class="movie-link">See more</a>
                    </div>
                </div>
            </div>
        </div>
        }
    }
</div>



@section Scripts{
    <script src="~/js/Movies/Search/search.js"></script>
}