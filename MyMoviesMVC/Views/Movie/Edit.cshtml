@model MyMoviesMVC.ModelsDTO.Movie.EditMovieDTO;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit";
}

@section Style{
    <link href="~/css/Movies/Edit/edit.css" rel="stylesheet" type="text/css" />
}


<div id="edit-movie-form">
    <form asp-controller="Movie" asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
        <div class="form-inputs">
            <label asp-for="Title">Title:</label>
            <input type="text" asp-for="Title" placeholder="Title" required maxlength="30" />
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-inputs">
            <label asp-for="Genre">Genre:</label>
            <select asp-for="Genre" asp-items="Html.GetEnumSelectList<MyMoviesMVC.Models.Enums.Genre>()">
            </select>
        </div>
        <div class="form-inputs">
            <label>Cover Photo:</label>
            <input id="upload-picture" asp-for="Cover" type="file" accept="image/*" />
            <span asp-validation-for="Cover"></span>
        </div>
        <div class="form-inputs">
            <label asp-for="Description">Description:</label>
            <textarea asp-for="Description" placeholder="Description" rows="5" required maxlength="300">  </textarea>
            <span asp-validation-for="Description"></span>
        </div>
        <div class="note">
            <p>
                *Cover photo is optional.
            </p>
        </div>
        <div id="submit-form">
            <input type="submit" value="Edit" id="submit-button" />
        </div>
        <div id="validation-error" asp-validation-summary="ModelOnly">

        </div>
    </form>
</div>

@section Scripts{
    <script src="~/js/Common/ImageValidator/imagevalidator.js"></script>
}